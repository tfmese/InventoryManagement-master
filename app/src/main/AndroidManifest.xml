            android:name=".ui.order.OrderActivity"
            android:exported="false" />
        <activity 
            android:name=".ui.supplier.SupplierActivity"
            android:exported="false" />
        <activity 
            android:name=".ui.category.CategoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.shipment.ShipmentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.inventorytransaction.InventoryTransactionActivity"
